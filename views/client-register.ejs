  <main class="mt-5 pt-4">
    <div class="sidenav">
      <div class="login-main-text mt-6 pt-2 text-center">
         <h2>Registre-se aqui para acessar.</h2>
      </div>
   </div>
   <div class="main">
      <div class="col-md-6 col-sm-12 mt-5 pt-3">
         <div class="login-form">
            <form action="/cliente" method="post">
               <div class="form-group">
                  <label>E-mail</label>
                  <input type="text" class="form-control" placeholder="Digite seu e-mail" name="email">
               </div>
               <div class="form-group">
                  <label>Senha</label>
                  <input type="password" class="form-control" placeholder="Digite sua senha" name="senha">
               </div>
               <div class="form-group">
                <label>Nome</label>
                <input type="text" class="form-control" placeholder="Digite seu nome" name="nome">
             </div>
             <div class="form-group">
              <label>CPF</label>
              <input type="number" class="form-control" placeholder="Digite seu CPF" name="cpf">
             </div>
