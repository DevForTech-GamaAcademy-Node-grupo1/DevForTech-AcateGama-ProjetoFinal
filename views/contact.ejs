<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <title>Contato</title>
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
  <!-- Bootstrap core CSS -->
  <link href="../public/css/bootstrap.min.css" rel="stylesheet">
  <!-- Material Design Bootstrap -->
  <link href="../public/css/mdb.min.css" rel="stylesheet">
  <!-- Your custom styles (optional) -->
  <link href="../public/css/style.min.css" rel="stylesheet">
</head>

<body>

   <!-- Navbar -->
   <%- include('./navbar'); %>
   <!-- Navbar -->

  <!--Main layout-->
  <main class="mt-5 pt-4">

    <form class="form-horizontal">
      <fieldset>

      <!-- Form Name -->
      <legend class="text-center">Entre em contato</legend>
      
      <!-- Text input-->
      <div class="form-group">
        <label class="col-md-4 control-label" for="Seu Email">Seu Email</label>  
        <div class="col-md-8">
        <input id="Seu Email" name="Seu Email" placeholder="Digite corretamente seu email" class="form-control input-md" required="" type="text">
          
        </div>
      </div>
      
      <!-- Text input-->
      <div class="form-group">
        <label class="col-md-4 control-label" for="textinput">Seu Nome</label>  
        <div class="col-md-8">
        <input id="textinput" name="textinput" placeholder="Digite seu nome completo" class="form-control input-md" required="" type="text">
          
        </div>
      </div>
      
      <!-- Text input-->
      <div class="form-group">
        <label class="col-md-4 control-label" for="textinput">Assunto</label>  
        <div class="col-md-8">
        <input id="textinput" name="textinput" placeholder="Digite o assunto" class="form-control input-md" required="" type="text">
          
        </div>
      </div>
      
      <!-- Textarea -->
      <div class="form-group">
        <label class="col-md-4 control-label" for="textarea">Mensagem</label>
        <div class="col-md-4">                     
          <textarea class="form-control" id="textarea" name="textarea"></textarea>
        </div>
      </div>
      
      <!-- Button -->
      <div class="form-group">
        <label class="col-md-4 control-label" for="singlebutton"></label>
        <div class="col-md-4">
          <button id="singlebutton" name="singlebutton" class="btn btn-primary">Enviar</button>
        </div>
      </div>
      
      </fieldset>
      </form>
  </main>
  <!--Main layout-->

<!--Footer-->
<%- include('./footer'); %>
<!--/.Footer-->

  <!-- SCRIPTS -->
  <!-- JQuery -->
  <script type="text/javascript" src="../public/js/jquery-3.4.1.min.js"></script>
  <!-- Bootstrap tooltips -->
  <script type="text/javascript" src="../public/js/popper.min.js"></script>
  <!-- Bootstrap core JavaScript -->
  <script type="text/javascript" src="../public/js/bootstrap.min.js"></script>
  <!-- MDB core JavaScript -->
  <script type="text/javascript" src="../public/js/mdb.min.js"></script>
  <!-- Initializations -->
  <script type="text/javascript">
    // Animations initialization
    new WOW().init();

  </script>
</body>

</html>
